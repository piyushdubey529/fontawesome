<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fontawesomeicon.MainActivity"
    android:gravity="center_horizontal"
    android:layout_marginTop="50dp">

    <com.fontawesomeicon.Fontawesome
        android:id="@+id/piechart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_icon_areachart"
        android:textSize="50dp"
         />

    <com.fontawesomeicon.Fontawesome
        android:id="@+id/areachart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_icon_linechart"
        android:textSize="50dp"
        android:layout_marginTop="20dp"/>

    <com.fontawesomeicon.Fontawesome
        android:id="@+id/linechart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_icon_piechart"
        android:textSize="50dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
